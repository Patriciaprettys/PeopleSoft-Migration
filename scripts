# data_validation.py
# Example script for validating migrated HR data (dummy version)

import pandas as pd

# Load dummy data
workday_data = pd.DataFrame({
    "Employee_ID": [1, 2, 3],
    "First_Name": ["John", "Jane", "Alex"]
})

peoplesoft_data = pd.DataFrame({
    "EMPLID": [1, 2, 3],
    "FIRSTNAME": ["JOHN", "JANE", "ALEX"]
})

# Validate matching IDs
if set(workday_data["Employee_ID"]) == set(peoplesoft_data["EMPLID"]):
    print("All employee IDs match.")
else:
    print("Mismatch found.")
